---
import { getCurrentLanguage, t } from '../util/astro-i18n'

const language = getCurrentLanguage()
---

<div class="welcome-container">
  <aside class="header">
    <select id="language-selector">
      <option value="en" selected={language === 'en'}>{t('language.en')}</option>
      <option value="es" selected={language === 'es'}>{t('language.es')}</option>
    </select>
    <span id="views-container"></span>
  </aside>

  <div class="shape shape-1" style="top: 12%; left: 25%; animation-delay: 0.3s;"></div>
  <div class="shape shape-1" style="top: 85%; left: 70%; animation-delay: 1.2s;"></div>
  <div class="shape shape-1" style="top: 40%; left: 15%; animation-delay: 0.7s;"></div>
  <div class="shape shape-1" style="top: 65%; left: 80%; animation-delay: 1.5s;"></div>
  <div class="shape shape-1" style="top: 20%; left: 90%; animation-delay: 0.2s;"></div>
  <div class="shape shape-1" style="top: 75%; left: 30%; animation-delay: 0.9s;"></div>
  <div class="shape shape-2" style="top: 5%; left: 50%; animation-delay: 1.7s;"></div>
  <div class="shape shape-2" style="top: 95%; left: 20%; animation-delay: 0.5s;"></div>
  <div class="shape shape-2" style="top: 30%; left: 75%; animation-delay: 1.1s;"></div>
  <div class="shape shape-2" style="top: 50%; left: 5%; animation-delay: 0.8s;"></div>
  <div class="shape shape-2" style="top: 80%; left: 60%; animation-delay: 0.4s;"></div>
  <div class="shape shape-2" style="top: 10%; left: 40%; animation-delay: 1.3s;"></div>
  <div class="shape shape-2" style="top: 60%; left: 10%; animation-delay: 0.6s;"></div>
  <div class="shape shape-2" style="top: 90%; left: 90%; animation-delay: 1.8s;"></div>
  <div class="shape shape-3" style="top: 25%; left: 25%; animation-delay: 1.0s;"></div>
  <div class="shape shape-3" style="top: 70%; left: 45%; animation-delay: 0.1s;"></div>
  <div class="shape shape-3" style="top: 55%; left: 85%; animation-delay: 1.4s;"></div>
  <div class="shape shape-3" style="top: 15%; left: 65%; animation-delay: 0.0s;"></div>
  <div class="shape shape-3" style="top: 45%; left: 35%; animation-delay: 1.6s;"></div>
  <div class="shape shape-3" style="top: 35%; left: 95%; animation-delay: 0.3s;"></div>

  <div class="content">
    <div class="hero corner-pixels">
      <h1 class="hero-title">{t('welcome.title')}</h1>
      <h2 class="hero-subtitle">{t('welcome.subtitle')}</h2>

      <a class="button" href="/class"><button class="hero-button">{t('welcome.class')}</button></a>
    </div>
  </div>

  <footer>
    <p>{t('welcome.aside')}<a href="https://www.codeserk.es">@codeserk</a></p>
  </footer>
</div>

<style>
  .welcome-container {
    text-align: center;
    padding: 12px 24px;
    margin: 0 auto;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    transition: max-height 1s ease-in-out;

    .header {
      min-height: 40px;
      font-size: 1.2em;
      display: flex;
      align-items: center;
      justify-content: space-between;
      width: 100%;
      transition: all 0.4s ease-in-out;
      transition-delay: 0.2s;
    }

    .hero {
      max-width: 800px;
      width: 95vw;
    }

    .content {
      flex: 1;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }

    footer {
      transition: all 0.4s ease-in-out;
      transition-delay: 0.2s;

      p {
        font-size: 1em;
        margin: 0;
      }
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    document.getElementById('language-selector')?.addEventListener('change', (ev) => {
      const target = ev.target as HTMLSelectElement
      window.location.href = `/${target.value}`
    })
  })
</script>
