---
import { Button } from './Button'
import { t } from '../util/astro-i18n'
---

<div class="welcome-container">
  <aside class="header">
    <span id="views-container"></span>
  </aside>

  <div class="content">
    <h1>{t('welcome.title')}</h1>
    <h2>{t('welcome.subtitle')}</h2>

    <div class="button-container">
      <Button client:load id="start-button" size="big" rounded confetti>{t('welcome.start')}</Button>
    </div>
  </div>

  <footer>
    <p>{t('welcome.aside')}<a href="https://www.codeserk.es">@codeserk</a></p>
  </footer>
</div>

<style>
  .welcome-container {
    text-align: center;
    padding: 12px 24px;
    margin: 0 auto;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    transition: max-height 1s ease-in-out;

    .header {
      min-height: 40px;
    }

    &.started {
      max-height: 0;

      h1 {
        opacity: 0;
      }
      h2 {
        opacity: 0;
      }
      #start-button {
        opacity: 0;
      }
      footer {
        transform: translate3d(0, 100%, 0);
        opacity: 0;
      }
    }

    h1 {
      font-size: 5em;
      color: #000;
      text-transform: uppercase;
      margin-bottom: 16px;
      text-shadow: 0px 0px 3px rgba(255, 255, 255, 0.9);
      line-height: 0.9;
      font-family: var(--font-title);
      letter-spacing: -2px;
      transition: all 0.4s ease-in-out;
      max-width: 800px;
    }

    h2 {
      font-size: 2em;
      color: #000;
      margin-bottom: 2em;
      font-family: var(--font-body);
      text-shadow: 0px 0px 1px rgba(255, 255, 255, 0.9);
      font-weight: 700;
      letter-spacing: 1px;
      max-width: var(--block-width);
      transition: all 0.4s ease-in-out;
      transition-delay: 0.1s;
    }

    .content {
      flex: 1;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;

      .button {
        background: var(--color-pink);
        color: white;
        transition: opacity 0.4s ease-in-out;
        animation: pulse 1s ease-in-out infinite;
      }
    }

    footer {
      transition: all 0.4s ease-in-out;
      transition-delay: 0.2s;

      p {
        font-size: 1em;
        margin: 0;
      }
    }
  }

  @keyframes pulse {
    0%,
    100% {
      filter: brightness(1) saturate(1);
    }
    50% {
      filter: brightness(1.2) saturate(1.2);
    }
  }
</style>

<script>
  let hasStarted = false
  document.addEventListener('DOMContentLoaded', () => {
    document.getElementById('start-button')?.addEventListener('click', () => {
      if (hasStarted) {
        return
      }

      hasStarted = true
      document.getElementsByClassName('welcome-container')?.[0]?.classList.add('started')
      document.getElementById('start-button')?.setAttribute('disabled', 'true')

      setTimeout(() => {
        document.getElementsByClassName('welcome-container')?.[0]?.remove()
        window.dispatchEvent(new CustomEvent('start-questionnaire'))
      }, 800)
    })
  })
</script>
