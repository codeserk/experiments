<style>
  /* floating shapes */

  .floating-shapes {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 0;
  }

  @keyframes float {
    0% {
      transform: translateY(0) rotate(0deg) scale(1);
    }
    25% {
      transform: translateY(-40px) rotate(8deg) scale(1.1);
    }
    50% {
      transform: translateY(-20px) rotate(-6deg) scale(0.95);
    }
    75% {
      transform: translateY(-50px) rotate(4deg) scale(1.05);
    }
    100% {
      transform: translateY(0) rotate(0deg) scale(1);
    }
  }

  .shape {
    position: absolute;
    opacity: 0.1;
    animation: float ease-in-out infinite;

    &.color-1 {
      background: #ff6b9d;
    }

    &.color-2 {
      background: #4ecdc4;
    }

    &.color-3 {
      background: #ffeb3b;
    }

    &.color-4 {
      background: #4a90e2;
    }

    &.square {
      width: 50px;
      height: 50px;
      border: 4px solid #000;
    }

    &.circle {
      width: 45px;
      height: 45px;
      border: 3px solid #000;
      border-radius: 50%;
    }

    &.triangle {
      width: 50px;
      height: 50px;
      background: none;

      svg {
        width: 100%;
        height: 100%;
        stroke: black;
      }

      &.color-1 svg {
        fill: #ff6b9d;
      }

      &.color-2 svg {
        fill: #4ecdc4;
      }

      &.color-3 svg {
        fill: #ffeb3b;
      }

      &.color-4 svg {
        fill: #4a90e2;
      }
    }

    &.star {
      background: none;

      svg {
        stroke: black;
      }

      &.color-1 svg {
        fill: #ff6b9d;
      }

      &.color-2 svg {
        fill: #4ecdc4;
      }

      &.color-3 svg {
        fill: #ffeb3b;
      }

      &.color-4 svg {
        fill: #4a90e2;
      }
    }
  }
</style>
