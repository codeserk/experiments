---
import Layout from '../layouts/Layout.astro'
import { changeLanguage, t } from '../util/astro-i18n'

changeLanguage('en')
---

<Layout>
  <head>
    <meta name="robots" content="noindex, nofollow" />
  </head>
  <div class="logo">
    <div class="content">
      <h1>{t('welcome.title')}</h1>
      <h2>{t('welcome.subtitle')}</h2>
    </div>

    <footer>
      <p>{t('welcome.aside')}<a href="https://www.codeserk.es">@codeserk</a></p>
    </footer>
  </div>
</Layout>

<style is:global>
  .logo {
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 1030px;
    height: 1030px;
    border: 2em solid black;
    padding: 1em 0;

    .content {
      flex: 1;
      gap: 2em;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;

      h1 {
        font-size: 9em;
        color: #000;
        text-transform: uppercase;
        max-width: 800px;
        text-shadow: 0px 0px 3px rgba(255, 255, 255, 0.9);
        line-height: 0.9;
        font-family: var(--font-title);
        letter-spacing: -2px;
        transition: all 0.4s ease-in-out;
      }

      h2 {
        font-size: 2em;
        color: #000;
        font-family: var(--font-body);
        max-width: var(--block-width);
        text-shadow: 0px 0px 1px rgba(255, 255, 255, 0.9);
        font-weight: 700;
        letter-spacing: 1px;
        transition: all 0.4s ease-in-out;
        transition-delay: 0.1s;
      }
    }
  }
</style>
